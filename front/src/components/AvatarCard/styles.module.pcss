:global(.ui.card).card {
  width: 100%;

  & :global(.header) {
    margin: 0 0 0.5em 0;
  }

  @media (max-width: 575px) {
    & :global(.eight.wide.column) {
      width: 100% !important;
    }
    & :global(.right.aligned.column) {
      display: none;
    }
  }
}

:global(.ui.image).avatar{
  border-radius: 50%;
  border: 1px solid #ccc;
  width: 64px;
  height: 64px;
  background-color: #efefef;
}

.author {
  margin-top: 0.5em;
}