 :global(.ui.image).avatar{
  border-radius: 50%;
  border: 1px solid #ccc;
  width: 64px;
  height: 64px;
  background-color: #efefef;
}

.user {
  display: flex;
  flex-direction: column;

  & img {
    margin-right: 1.5em;
  }

  & span {
    font-size: 16px;
  }

  & .content {
    display: flex;
    align-items: center;
  }
}
